[Unit]
Description="HashiCorp vault - A secrets management solution"
Documentation=https://www.vault.io/
Requires=network-online.target
After=network-online.target
ConditionFileNotEmpty={{ vault_config_dir }}/config.hcl

[Service]
User={{ vault_user }}
Group={{ vault_group }}
ExecStart=/usr/local/bin/vault server -config={{ vault_config_dir }}
ExecReload=/bin/kill --signal HUP $MAINPID
KillMode=process
KillSignal=SIGTERM
Restart=on-failure
LimitNOFILE=65536

[Install]
WantedBy=multi-user.target